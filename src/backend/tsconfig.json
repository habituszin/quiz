{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "ES6",
    "outDir": "../../compiled",
    "module": "CommonJS",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
  },
  "exclude": ["../../node_modules", "views/web-components"]
}
