{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["../backend/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": ["../backend/@types", "../../node_modules/@types"]
  },
  "exclude": ["../../node_modules"]
}
